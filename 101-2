#include<stdio.h>
#include<stdlib.h>
#include <ctype.h>
#include <math.h>

void in_values(int size,int array[size][size]);
void print_matrix(int size,int array[size][size]);

int main()
{
    int order=0,n=0,m=0,menu=0,out=1,wait=1;
    
    printf("**********MATRIX CALCULATOR*********\n\n");
    printf("Enter matrix size: ");
    scanf("%d", &order);
    system("clear");
    int matrix1[order][order],matrix2[order][order];
    
    //>>>>>>>>>>>>>ENTER MATRIX VALUES>>>>>>>>>>>>>
    printf("MATRIX A: \n");
    in_values(order,matrix1);
    system("clear");
    
    //*********************CHOOSE OPERATION**********************************
    while(out)
    {
    printf("**********MATRIX CALCULATOR*********\n\n");
    printf("OPERATIONS: \n");
    printf("PRINT ARRAYS(1) \n");
    printf("ADD A+B(2) \n");
    printf("SUBTRACT A+B(3) \n");
    printf("MULTIPLY A*B(4) \n");
    printf("DETERMINANT(5) \n");
    printf("EXIT(6) \n");
    scanf("%d",&menu);
    system("clear");
    
        switch(menu)
        {
            //>>>>>>>>>>>>>PRINT MATRIX>>>>>>>>>>>>>
            case 1:
                printf("MATRIX A: \n");
                print_matrix(order,matrix1);
                while(wait)
                    {
                        scanf("%d",&wait);
                        if(wait)wait=0;
                    }
                    wait=1;
                    system("clear");
                break;
            //>>>>>>>>>>>>>FINISH PROGRAM>>>>>>>>>>>>>
            case 6:
                out=0;
                break;
            default:
                printf("\nOPTION 1-6 ONLY AVAILABLE");
                
        }
    } 
   
    return 0;
}
//>>>>>>>>>>>>>ENTER MATRIX FUNCTION>>>>>>>>>>>>>
void in_values(int size,int array[size][size])
{
    for(int i=0;i<size;i++)
    {
        for(int j=0;j<size;j++)
        {
           printf("[%d][%d]= ",i,j);
           scanf("%d",&array[i][j]);
        }
    }
    printf("\n");
}
//>>>>>>>>>>>>>PRINT MATRIX FUNCTION>>>>>>>>>>>>>
void print_matrix(int size,int array[size][size])
{
    for(int i=0;i<size;i++)
    {
        for(int j=0;j<size;j++)
        {
           printf("[%d] ",array[i][j]);
        }
    printf("\n");
    }
}


