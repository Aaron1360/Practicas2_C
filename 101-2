#include<stdio.h>
#include<stdlib.h>
#include<ctype.h>
#include<math.h>

void in_values(int size,int array[size][size]);
void print_matrix(int size,int array[size][size]);
void add(int size,int array1[size][size],int array2[size][size],int res[size][size]);
void sub(int size,int array1[size][size],int array2[size][size],int res[size][size]);
void mult(int size,int array1[size][size],int array2[size][size],int res[size][size]);
int det(int size,int array[size][size]);
int cof(int size,int array[size][size],int row,int col);

int main()
{
    int order=0,menu=0,out=1,wait=1;
    
    printf("**********MATRIX CALCULATOR*********\n\n");
    printf("Enter matrix size: ");
    scanf("%d", &order);
    system("clear");
    int matrix1[order][order],matrix2[order][order],result[order][order];
    printf("**********MATRIX CALCULATOR*********\n\n");
    
    //>>>>>>>>>>>>>ENTER MATRIX VALUES>>>>>>>>>>>>>
    printf("MATRIX A: \n");
    in_values(order,matrix1);
    system("clear");
    printf("**********MATRIX CALCULATOR*********\n\n");
    printf("MATRIX B: \n");
    in_values(order,matrix2);
    system("clear");
    //*********************CHOOSE OPERATION**********************************
    while(out)
    {
    printf("**********MATRIX CALCULATOR*********\n\n");
    printf("OPERATIONS: \n");
    printf("PRINT ARRAYS(1) \n");
    printf("ADD A+B(2) \n");
    printf("SUBTRACT A+B(3) \n");
    printf("MULTIPLY A*B(4) \n");
    printf("DETERMINANT(5) \n");
    printf("EXIT(6) \n");
    scanf("%d",&menu);
    system("clear");
    
        switch(menu)
        {
            //>>>>>>>>>>>>>PRINT MATRIX>>>>>>>>>>>>>
            case 1:
                printf("**********MATRIX CALCULATOR*********\n\n");
                printf("MATRIX A: \n");
                print_matrix(order,matrix1);
                while(wait)
                    {
                        scanf("%d",&wait);
                        if(wait)wait=0;
                    }
                    wait=1;
                    system("clear");
                break;
            //>>>>>>>>>>>>>ADD MATRIX>>>>>>>>>>>>>
            case 2:
                
                while(wait)
                    {
                        scanf("%d",&wait);
                        if(wait)wait=0;
                    }
                    wait=1;
                    system("clear");
                break;
            //>>>>>>>>>>>>>SUBTRACT MATRIX>>>>>>>>>>>>>
            case 3:
                while(wait)
                    {
                        scanf("%d",&wait);
                        if(wait)wait=0;
                    }
                    wait=1;
                    system("clear");
                break;
            //>>>>>>>>>>>>>MULTIPLY MATRIX>>>>>>>>>>>>>
            case 4:
                while(wait)
                    {
                        scanf("%d",&wait);
                        if(wait)wait=0;
                    }
                    wait=1;
                    system("clear");
                break;
            //>>>>>>>>>>>>>DETERMINANTS>>>>>>>>>>>>>
            case 5:
                while(wait)
