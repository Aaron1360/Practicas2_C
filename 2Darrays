
#include <stdio.h>
#include <stdlib.h>
void input_array(int size,int array[size][size]);
void print_array(int size,int array[size][size]);
void sum(int size,int array1[size][size],int array2[size][size],int result[size][size]);

int main()
{
    int size=0;
    printf("size = ");
    scanf("%d",&size);
    
    //SQUARE MATRIX DECLARATION
    int array1[size][size],array2[size][size],result[size][size];
    
    //INPUT MATRIX DATA
    printf("\n>>>>>>>>>>>>>>>\n");
    input_array(size,array1);
    printf("\n>>>>>>>>>>>>>>>\n");
    input_array(size,array2);
    system("clear");
    
    //PRINT MATRIX
    printf("ARRAY 1: \n");
    print_array(size,array1);
    printf("\n\nARRAY 2: \n");
    print_array(size,array2);
    
    //MATRIX OPERATION
    sum(size,array1,array2,result);
    printf("\nSUMA: \n");
    print_array(size,result);
    
    return 0;
}

void input_array(int size,int array[size][size])
{
    int num=0;
    printf("Enter a number: ");
    scanf("%d",&num);
    for(int i=0;i<size;i++)
    {
        for(int j=0;j<size;j++)
        {
            array[i][j]=num;
        }
    }    
}

void print_array(int size,int array[size][size])
{
   for(int i=0;i<size;i++)
    {
        for(int j=0;j<size;j++)
        {
            printf("[%d]  ",array[i][j]);
        }
        printf("\n");
    } 
}

void sum(int size,int array1[size][size],int array2[size][size],int result[size][size])
{
    for(int i=0;i<size;i++)
    {
        for(int j=0;j<size;j++)
        {
            result[i][j]=array1[i][j]+array2[i][j];
        }
    } 
}
