#include <stdio.h>
#include <stdlib.h>
#include <math.h>

void input_array(int size,int array[size][size]);
void print_array(int size,int array[size][size]);
int det(int size,int array[size][size]);
int cof(int size,int array[size][size],int row,int col);

int main()
{
    int size=0;
    printf("size = ");
    scanf("%d",&size);
    
    int array[size][size];
    
    //INPUT MATRIX DATA
    printf("\n>>>>>>>>>>>>>>>\n");
    input_array(size,array);
    system("clear");
    
    //PRINT MATRIX
    printf("ARRAY: \n");
    print_array(size,array);
    
    //MATRIX OPERATION
    printf("\nDETERMINANTE: %d\n",det(size,array));

    return 0;
}

void input_array(int size,int array[size][size])
{
    for(int i=0;i<size;i++)
    {
        for(int j=0;j<size;j++)
        {
            printf("[%d][%d]= ",i,j);
            scanf("%d",&array[i][j]);
        }
    }    
}

void print_array(int size,int array[size][size])
{
   for(int i=0;i<size;i++)
    {
        for(int j=0;j<size;j++)
        {
            printf("[%d]  ",array[i][j]);
        }
        printf("\n");
    } 
}

int det(int size,int array[size][size])
{
    int result=0;
    
    if(size==1){result=array[0][0];}
    
    else
    {
        for(int j=0;j<size;j++)
        {
            result+=array[0][j]*cof(size,array,0,j);
        }
    }
    return result;
}

int cof(int size,int array[size][size],int row,int col)
{
    int orden=size-1;
    int sub[orden][orden];
    int x=0,y=0;
    
    for(int i=0;i<size;i++)
    {
        for(int j=0;j<size;j++)
        {
            if((i!=row) && (j!=col))
            {
                sub[x][y]=array[i][j];
                y++;
                
                if(y>=orden)
                {
                    x++;
                    y=0;
                }
            }
        }
    } 
    return pow(-1.0,row+col)*det(orden,sub);
}
